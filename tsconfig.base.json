{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "moduleResolution": "Bundler",
        "strict": true,
        "declaration": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@leo9iota/react-components": ["packages/react-components"],
            "@leo9iota/svelte-components": ["packages/svelte-components"],
            "@leo9iota/vue-components": ["packages/vue-components"]
        }
    }
}
