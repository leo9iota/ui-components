{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "target": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["vite/client"]
    },
    "include": ["src/**/*", "app.html"],
    "exclude": ["node_modules/**", "dist/**"]
}
